{{#if products.length}}
  <table>
    <tr>
      <th>nombre</th>
      <th>precio</th>
      <th>stock</th>
      <th>marca</th>
      <th>categoria</th>
      <th>detalles</th>
      <th>foto</th>
      <th>envio</th>
    </tr>
    {{#each products}}
      <tr>
        <td>{{name}}</td>
        <td>{{price}}</td>
        <td>{{stock}}</td>
        <td>{{mark}}</td>
        <td>{{category}}</td>
        <td>{{details}}</td>
        <td>
          <img
            src="{{photo}}"
            alt="{{name}}"
            style="display:block; margin: 0 auto;"
            width="50"
          />
        </td>
        {{#if sending}}
          <td>Yes</td>
        {{else}}
          <td>No</td>
        {{/if}}
        <td>
          {{#if ../valids}}
            <button onclick="productoController.updateProducts({{id}})">Update</button>
          {{else}}
            <button disabled onclick="productoController.updateProducts({{id}})">Update</button>
          {{/if}}
        </td>
        <td>
            <button onclick="productController.deleteProduct({{id}})">delete</button>
        </td>
      </tr>
    {{/each}}
  </table>
{{/if}}